<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_signin"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/signup_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <EditText
            android:text="+84"
            android:id="@+id/txtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_login_edittext"
            android:drawableLeft="@drawable/phone"
            android:hint="Phone Nunber"
            android:inputType="phone"
            android:lines="1"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#FFF"
            android:textColorHint="#CFCFCF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_login_edittext"
            android:drawableLeft="@drawable/code"
            android:hint="Code"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#FFF"
            android:textColorHint="#CFCFCF"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="10">

        <Button
            android:id="@+id/btnSendSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_button_signup"
            android:text="Send SMS"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btnVerifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_button_signup"
            android:text="Verify Code"
            android:textColor="#FFF" />

    </LinearLayout>


</LinearLayout>