<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

   <ImageView
       android:id="@+id/imgHotelHistory"
       android:scaleType="fitXY"
       android:layout_weight="4"
       android:layout_width="0dp"
       android:layout_height="150dp"
       android:src="@drawable/hotel1"
       />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:textColor="#FF5722"
            android:id="@+id/NameHotelHistory"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Khách sạn Thiên Sơn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/AdrHotleHistory"
                android:textColor="#009688"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="68 Trần Hưng Đạo, Dương Đông, Phú Quốc" />

            </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CostHostelHistory"
            android:textColor="#FFC107"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="69.000.000"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="đồng/ngày"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#673AB7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Ngày đặt:"/>
            <TextView
                android:id="@+id/DateBookingHistory"
                android:textColor="#E91E63"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="6/9/2019"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>