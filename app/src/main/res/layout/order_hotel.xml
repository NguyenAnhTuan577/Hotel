<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBlue">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="60dp"
            android:paddingBottom="200dp"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/cover_view_pager"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:background="@color/FlatTealBlue"
                />

            <View
                android:id="@+id/info_panel"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_item_hotel"
                app:layout_constraintTop_toBottomOf="@id/cover_view_pager"
                app:layout_constraintBottom_toBottomOf="@id/cover_view_pager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="HitoriBocchi"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/FlatBlue"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="@id/info_panel"
                app:layout_constraintBottom_toTopOf="@id/rating_hotel"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/info_panel"
                app:layout_constraintEnd_toEndOf="@id/info_panel"
                android:layout_marginEnd="20dp"
                />
            <RatingBar
                android:id="@+id/rating_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                tools:rating="4"
                android:theme="@style/RatingBar"
                android:numStars="5"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintBottom_toTopOf="@id/address"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Wa hà hah"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/FlatBlue"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintTop_toBottomOf="@id/rating_hotel"
                app:layout_constraintBottom_toBottomOf="@id/info_panel"
                app:layout_constraintEnd_toEndOf="@id/name"
                />
            <View
                android:id="@+id/choose_date_panel"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/background_item_hotel"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/choose_type_panel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/choose_date_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Check in"
                android:textColor="@color/FlatBlue"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/choose_date_panel"
                app:layout_constraintStart_toStartOf="@id/choose_date_panel"
                app:layout_constraintEnd_toEndOf="@id/choose_date_panel"
                app:layout_constraintBottom_toTopOf="@id/check_in"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/check_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chưa chọn"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/FlatGreen"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="@id/choose_date_label"
                app:layout_constraintTop_toBottomOf="@id/choose_date_label"
                app:layout_constraintEnd_toEndOf="@id/choose_date_label"
                app:layout_constraintBottom_toBottomOf="@id/choose_date_panel"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/calendar"
                android:padding="24dp"
                app:layout_constraintEnd_toEndOf="@id/choose_date_panel"
                app:layout_constraintTop_toTopOf="@id/choose_date_panel"
                app:layout_constraintBottom_toBottomOf="@id/choose_date_panel"
                />
            <View
                android:id="@+id/choose_date_panel_1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/background_item_hotel"
                android:layout_marginTop="6dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/choose_date_panel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/choose_date_label_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Check out"
                android:textColor="@color/FlatBlue"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/choose_date_panel_1"
                app:layout_constraintStart_toStartOf="@id/choose_date_panel_1"
                app:layout_constraintEnd_toEndOf="@id/choose_date_panel_1"
                app:layout_constraintBottom_toTopOf="@id/check_out"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/check_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chưa chọn"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/FlatGreen"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="@id/choose_date_label_1"
                app:layout_constraintTop_toBottomOf="@id/choose_date_label_1"
                app:layout_constraintEnd_toEndOf="@id/choose_date_label_1"
                app:layout_constraintBottom_toBottomOf="@id/choose_date_panel_1"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/calendar"
                android:padding="24dp"
                app:layout_constraintEnd_toEndOf="@id/choose_date_panel_1"
                app:layout_constraintTop_toTopOf="@id/choose_date_panel_1"
                app:layout_constraintBottom_toBottomOf="@id/choose_date_panel_1"
                />


            <View
                android:id="@+id/choose_type_panel"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/background_item_hotel"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/info_panel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/choose_type_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Choose room type"
                android:textColor="@color/FlatBlue"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/choose_type_panel"
                app:layout_constraintBottom_toTopOf="@id/room_type"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/choose_type_panel"
                app:layout_constraintEnd_toEndOf="@id/choose_type_panel"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/room_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Chưa chọn"
                android:textColor="@color/FlatGreen"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@id/choose_type_panel"
                app:layout_constraintTop_toBottomOf="@id/choose_type_label"
                app:layout_constraintStart_toStartOf="@id/choose_type_label"
                app:layout_constraintEnd_toEndOf="@id/choose_type_label"

                />
            <TextView
                android:id="@+id/unit_price"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="0 đ"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/FlatGreen"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="right"
                app:layout_constraintEnd_toEndOf="@id/choose_type_panel"
                app:layout_constraintTop_toTopOf="@id/choose_type_panel"
                app:layout_constraintBottom_toBottomOf="@id/choose_type_panel"
                android:layout_margin="24dp"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/FlatGreen">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="12dp"
            android:layout_margin="6dp"
            android:tint="@color/White"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/oder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#EEE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/notify_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="20dp"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        tools:visibility="visible"
        android:visibility="gone"
        app:cardElevation="5dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/notify_label"
                android:layout_width="150dp"
                android:gravity="center_horizontal"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/notify_text"
                app:layout_constraintBottom_toBottomOf="@id/notify_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:textColor="#444"
                android:textStyle="bold"
                android:text="Thông tin hóa đơn"
                />
            <TextView
                android:id="@+id/notify_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/notify_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/FlatTealBlue"
                android:text="Đặt phòng hạng nũ hoàng trong 5 ngày"/>
            <TextView
                android:id="@+id/bill_label"
                android:layout_width="150dp"
                android:gravity="center_horizontal"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/bill_text"
                app:layout_constraintBottom_toBottomOf="@id/bill_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:textColor="#444"
                android:textStyle="bold"
                android:text="Thành tiền"
                />
            <TextView
                android:id="@+id/bill_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/notify_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notify_text"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:textColor="@color/FlatTealBlue"
                android:text="1200000 đ"
                android:gravity="center"/>
            <TextView
                android:id="@+id/alert_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bill_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="@color/FlatRed"
                android:text="@string/not_enough_balance"
                android:visibility="gone"
                android:gravity="center"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:id="@+id/loading_parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#EEE"
        android:enabled="false"
        android:gravity="center"
        android:background="@color/FlatGreen"
        android:visibility="gone"
        tools:visibility="visible"
        >
        <com.tuyenmonkey.mkloader.MKLoader
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:mk_type="TwinFishesSpinner"
            />
    </FrameLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/book_hotel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:text="Thanh toán"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#EEE"
        android:enabled="false"
        android:gravity="center"
        android:background="@color/FlatGreen"
        tools:visibility="gone"
        />

</FrameLayout>