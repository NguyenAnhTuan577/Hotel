<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/LightBlue">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hotel_recycler_view"
            tools:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_hotel"
            android:clipToPadding="false"
            android:paddingTop="60dp"
            android:overScrollMode="never"
            android:orientation="vertical"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:id="@+id/search_panel"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        android:background="@drawable/background_search"/>
    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="28dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="@id/search_panel"
        app:layout_constraintBottom_toBottomOf="@id/search_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/search_text_view"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        />
    <TextView
        android:id="@+id/search_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/search_icon"
        app:layout_constraintBottom_toBottomOf="@id/search_icon"
        app:layout_constraintStart_toEndOf="@id/search_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/search"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#666"
        />
</android.support.constraint.ConstraintLayout>