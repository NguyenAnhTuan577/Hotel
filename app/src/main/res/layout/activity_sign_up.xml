<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_signin"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/signup_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtEmailSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_login_edittext"
            android:drawableLeft="@drawable/email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#FFF"
            android:textColorHint="#CFCFCF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtPasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_login_edittext"
            android:drawableLeft="@drawable/code"
            android:hint="Password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#FFF"
            android:textColorHint="#CFCFCF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtRetypePassSigup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_login_edittext"
            android:drawableLeft="@drawable/retype"
            android:hint="Retype Password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#FFF"
            android:textColorHint="#CFCFCF"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="10">

        <Button
            android:id="@+id/btnSign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_button_signup"
            android:text="SIGN UP"
            android:textColor="#FFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="4.5"
            android:background="#FFF"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="or"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="4.5"
            android:background="#FFF"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSigninPhonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/custom_button_login_phonenumber"
                android:drawableLeft="@drawable/phonenumber"
                android:text="Sign in with Phone numbe"
                android:textAllCaps="false"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSigninFB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/custom_button_login_fb"
                android:drawableLeft="@drawable/facebook"
                android:text="SIGN IN WITH FACEBOOK"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSigninGmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/custom_button_login_gmail"
                android:drawableLeft="@drawable/gmail"
                android:text="SIGN IN WITH GMAIL"
                android:textColor="#FFF" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>